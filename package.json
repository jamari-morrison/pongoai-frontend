{
  "name": "@pongoai/frontend",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/PongoAI/pongoai-frontend"
  },
  "license": "MIT",
  "scripts": {
    "start": "nx run pongo-landing:serve",
    "build": "nx run-many --target=build --all",
    "bundle-size": "nx run-many --target=bundle-size --all",
    "change": "beachball change --scope \"!packages/pongo-ui/*\"",
    "checkchange": "beachball check  --scope \"!packages/pongo-ui/*\" --changehint \"Run 'yarn change' to generate a change file\"",
    "publish:beachball": "beachball publish -b origin/master --access public -y",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "format": "prettier --ignore-path .gitignore --write ./",
    "check-format": "prettier --ignore-path .gitignore --check ./",
    "prepare": "husky install",
    "build-storybook": "build-storybook",
    "chromatic": "cd apps && cd vr-tests && yarn chromatic"
  },
  "devDependencies": {
    "@emotion/react": "11.4.1",
    "@emotion/styled": "11.3.0",
    "@fluentui/react-make-styles": "9.0.0-beta.1",
    "@fluentui/react-utilities": "9.0.0-beta.1",
    "@pongoai/react-theme": "^0.0.2",
    "@fluentui/react-conformance": "^0.5.1",
    "@fluentui/react-provider": "9.0.0-beta.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
    "@storybook/react": "^6.3.9",
    "@types/jest": "^27.0.2",
    "@types/react": "17.0.26",
    "@types/react-dom": "17.0.9",
    "@azure/data-tables": "12.0.0-beta.3",
    "@fluentui/bundle-size": "1.1.1",
    "eslint": "7.32.0",
    "jest": "^24.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "ts-jest": "^24.3.0",
    "typescript": "4.1.5",
    "@mui/styles": "5.0.1",
    "@nrwl/cli": "12.9.0",
    "@nrwl/jest": "12.9.0",
    "@nrwl/nx-cloud": "latest",
    "@nrwl/tao": "12.9.0",
    "@nrwl/workspace": "12.9.0",
    "@storybook/addon-a11y": "^6.3.6",
    "@storybook/addon-actions": "^6.3.6",
    "@storybook/addon-docs": "^6.3.6",
    "@storybook/addon-essentials": "^6.3.6",
    "@storybook/addon-knobs": "^6.3.0",
    "@storybook/addon-links": "^6.3.10",
    "@storybook/addons": "^6.3.6",
    "@storybook/api": "^6.3.6",
    "@storybook/builder-webpack5": "^6.3.6",
    "@storybook/channels": "^6.3.6",
    "@storybook/components": "^6.3.6",
    "@storybook/core": "^6.3.6",
    "@storybook/html": "^6.3.6",
    "@storybook/manager-webpack5": "^6.3.6",
    "@storybook/theming": "^6.3.6",
    "@types/enzyme": "3.10.9",
    "@types/node": "14.14.33",
    "autoprefixer": "^10.3.7",
    "babel-jest": "27.2.4",
    "beachball": "^2.16.0",
    "chromatic": "^5.10.2",
    "clsx": "1.1.1",
    "codecov": "3.8.3",
    "enzyme": "~3.11.0",
    "enzyme-adapter-react-16": "^1.15.0",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.5.2",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.26.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "git-format-staged": "^2.1.2",
    "husky": "^7.0.0",
    "jest-cli": "24.9.0",
    "jest-environment-jsdom": "24.9.0",
    "jest-watch-typeahead": "0.5.0",
    "next": "11.1.2",
    "postcss": "^8.3.9",
    "prettier": "^2.4.1",
    "react-docgen-typescript": "2.1.0",
    "tailwindcss": "^2.2.15",
    "ts-node": "^10.2.1",
    "tslib": "^2.0.0",
    "webpack-dev-server": "4.3.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*./": "prettier --write"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  }
}
